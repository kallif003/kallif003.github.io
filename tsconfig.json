{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"types": ["node", "jest"],
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/pages/index.tsx", "tests/Header.test.tsx", "src/pages/soma.js"],
	"exclude": ["node_modules"]
}
